<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – Шурфовочные работы</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-1.12.4.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>

    <script src="~/scripts/jquery.unobtrusive-ajax.js"></script>
</head>
<body style="padding-top:0px">
    <div class="navbar" style="background-color:dodgerblue">
        <div class="row">
            <h3 class="col-md-offset-1" style="color:white">Мониторинг шурфовочных работ</h3>
        </div>
        <div class="row" style="background-color:darkblue">
            <div class="btn-group col-md-offset-1 nav-justified">
                <div class="col col-md-4">
                    <button id="objectsButton" onclick="location.href='@Url.Action("Index", "Home")'" type="button" class="btn btn-link" style="color:white; background-color:darkslateblue">Объекты</button>
                    <button id="catalogButton" onclick="location.href='@Url.Action("CreateReport", "Home")'" type="button" class="btn btn-link" style="color:white; background-color:darkslateblue">В Exel</button>
                </div>
                <div class="col col-md-offset-6">
                    @if (User.Identity.IsAuthenticated == false)
                    {
                        <button id="catalogButton" onclick="location.href = '@Url.Action("LogIn", "Account")'" type="button" class="btn btn-link" style="color:white; background-color:darkslateblue">Войти</button>
                    }
                    else
                    {
                        <label class="col-md-6" style="color:white">Вход под логином: @User.Identity.Name </label>
                        <button id="catalogButton" onclick="location.href='@Url.Action("LogOut", "Account")'" type="button" class="btn btn-link" style="color:white; left:100px; background-color:darkslateblue">Выйти</button>
                    }
                </div>
            </div>
        </div>
    </div>





